@model List<Book>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a class="btn btn-primary" asp-controller="Book" asp-action="Create">Add a book</a>
@if (Model.Count > 0)
{
    <h1>List of books</h1>
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Akcje
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Author
                </td>
                <td>
                    <a class="btn btn-outline-secondary" asp-controller="Book" asp-action="Update" asp-route-id=@item.Id>Edit</a>
                    <a class="btn btn-outline-info" asp-controller="Book" asp-action="Details" asp-route-id=@item.Id>Details</a>
                    <a class="btn btn-outline-danger" asp-controller="Book" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p class="alert-dark">No books to display.</p>
}